<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_50">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImageView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="100dp"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/animal_paw" />

        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="384dp"
            android:layout_height="202dp"
            android:layout_marginTop="250dp"
            android:stretchColumns="0,2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow />

            <TableRow>

                <TextView
                    android:id="@+id/birthdayHint"
                    android:layout_width="10dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="30dp"
                    android:text="@string/owner"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos2"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/ownerText1"
                    android:layout_width="193dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="Javi"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/nameHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="30dp"
                    android:text="@string/race"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos3"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <Spinner
                    android:id="@+id/spinnerRace1"
                    android:layout_width="40dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/ownerText1"
                    tools:layout_editor_absoluteX="40dp" />
            </TableRow>

            <TableRow android:layout_width="match_parent">

                <TextView
                    android:id="@+id/nameHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text=""
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos3"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text=""
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <Spinner
                    android:id="@+id/spinnerRace2"
                    android:layout_width="20dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/ownerText1"
                    tools:layout_editor_absoluteX="40dp" />

                <ImageButton
                    android:id="@+id/buttonAddRace"
                    android:layout_width="35dp"
                    android:layout_height="29dp"
                    android:backgroundTint="@color/md_white_1000"
                    android:onClick="editRace"
                    android:tint="@color/md_blue_A100"
                    app:srcCompat="@drawable/ic_add_black_24dp" />

                <Button
                    android:id="@+id/buttonDelRace"
                    android:layout_width="35dp"
                    android:layout_height="29dp"
                    android:background="@color/md_white_1000"
                    android:onClick="editRace"
                    android:text="X"
                    android:textColor="@color/md_red_A700"
                    android:textSize="17dp"
                    android:visibility="gone" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/emailHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="30dp"
                    android:text="@string/chip"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos4"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/chipText1"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="1515"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/emailHint"
                    android:layout_width="111dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="30dp"
                    android:text="@string/birthday"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos5"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/birthText1"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="13/08/2020"
                    android:textColor="@color/md_grey_600"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </TableRow>
        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/buttonVolver2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
            app:layout_constraintVertical_bias="1.0"
            tools:itemCount="2"
            tools:listitem="@layout/pet_profile_user_element">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/buttonVolver2"
            android:layout_width="113dp"
            android:layout_height="57dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_with_borders_translucent"

            android:cropToPadding="false"
            android:onClick="volver"
            android:text="@string/goBack"
            android:textAllCaps="false"
            android:textColor="@color/md_white_1000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonGuardarCambios"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petCaregivers" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="143dp"
            android:layout_height="59dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_without_corners"
            android:backgroundTint="#00C4CC"
            android:cropToPadding="false"
            android:onClick="edit"
            android:text="@string/saveChanges"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petCaregivers"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/usernameText1"
            android:layout_width="410dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Lucas"
            android:textColor="@color/md_grey_600"
            android:textSize="22dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintVertical_bias="0.518"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_deny_invitation"
            android:onClick="wantToDeletePet"
            android:text="@string/delete"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/usernameText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/addCarg"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/button_accept_invitation"
            android:cropToPadding="false"
            android:text="@string/add"
            android:onClick="addCargs"
            android:textAllCaps="false"
            android:textColor="@color/md_grey_600"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/recyclerView1"
            app:layout_constraintTop_toTopOf="@+id/recyclerView1"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>