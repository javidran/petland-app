<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImageView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="100dp"
            app:civ_border_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/animal_paw" />

        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="409dp"
            android:layout_height="224dp"
            android:layout_marginTop="250dp"
            android:stretchColumns="0,2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TableRow />

            <TableRow>

                <TextView
                    android:id="@+id/birthdayHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="@string/owner"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos2"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textSize="25dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/ownerText1"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="Javi"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/nameHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="@string/race"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos3"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textSize="25dp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/raceText1"
                    android:layout_width="40dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="Paco"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/emailHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="@string/chip"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos4"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textSize="25dp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/chipText1"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="1515"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/emailHint"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="@string/birthday"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dosPuntos5"
                    android:gravity="start"
                    android:padding="3dip"
                    android:paddingEnd="10dip"
                    android:text="@string/dosPuntos"
                    android:textSize="25dp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/birthText1"
                    android:layout_width="47dp"
                    android:gravity="fill_horizontal"
                    android:paddingStart="20dp"
                    android:text="13/08/2020"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText" />
            </TableRow>
        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_width="340dp"
            android:layout_height="193dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/buttonVolver2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
            app:layout_constraintVertical_bias="0.0"
            tools:itemCount="2"
            tools:listitem="@layout/pet_profile_user_element">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/buttonVolver2"
            android:layout_width="113dp"
            android:layout_height="57dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_with_borders_translucent"

            android:cropToPadding="false"
            android:onClick="volver"
            android:text="@string/goBack"
            android:textAllCaps="false"
            android:textColor="@color/md_white_1000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonGuardarCambios"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petCaregivers" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="143dp"
            android:layout_height="59dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_without_corners"
            android:backgroundTint="#00C4CC"
            android:cropToPadding="false"
            android:onClick="edit"
            android:text="@string/saveChanges"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petCaregivers"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/usernameText1"
            android:layout_width="410dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="Lucas"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintVertical_bias="0.516"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_without_corners"
            android:backgroundTint="@color/md_red_A700"
            android:onClick="deletePet"
            android:text="@string/delete"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/usernameText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/addCarg"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:background="@drawable/button_without_corners"
            android:backgroundTint="@color/md_blue_A100"
            android:onClick="addCargs"
            android:text="+"
            tools:layout_editor_absoluteX="356dp"
            tools:layout_editor_absoluteY="487dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
